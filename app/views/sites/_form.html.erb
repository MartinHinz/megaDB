<%= form_for(@site, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @site.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h4>

      <ul>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :toponym, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :toponym, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nuts_3, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nuts_3, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nuts_2, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nuts_2, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nuts_1, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nuts_1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :literature, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :literature, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :la_nr, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :la_nr, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lat, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :lat, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lng, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :lng, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mega_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :mega_type_id, MegaType.all, :id, :name, {prompt: true}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :source, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :source_id, Source.all, :id, :name, {prompt: true}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :comments, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
