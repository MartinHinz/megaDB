<div class="page-header">
  <%= link_to sites_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_site_path(@site), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show site</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @site.name %></dd>

  <dt>Toponym:</dt>
  <dd><%= @site.toponym %></dd>

  <dt>Nuts 3:</dt>
  <dd><%= @site.nuts_3 %></dd>

  <dt>Nuts 2:</dt>
  <dd><%= @site.nuts_2 %></dd>

  <dt>Nuts 1:</dt>
  <dd><%= @site.nuts_1 %></dd>

  <dt>Description:</dt>
  <dd><%= @site.description %></dd>

  <dt>Literature:</dt>
  <dd><%= @site.literature %></dd>

  <dt>La nr:</dt>
  <dd><%= @site.la_nr %></dd>

  <dt>Lat:</dt>
  <dd><%= @site.lat %></dd>

  <dt>Lng:</dt>
  <dd><%= @site.lng %></dd>

  <dt>Mega type:</dt>
  <dd><%= @site.mega_type %></dd>

  <dt>Source:</dt>
  <dd><%= @site.source %></dd>

  <dt>Comments:</dt>
  <dd><%= @site.comments %></dd>

</dl>
